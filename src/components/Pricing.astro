---
const plans = [
  {
    name: "Básico",
    price: "29.99",
    period: "mes",
    features: [
      "Acceso a sala de musculación",
      "Horario limitado (8:00 AM - 4:00 PM)",
      "Evaluación física inicial",
      "Acceso a vestuarios"
    ],
    cta: "Elegir Plan",
    popular: false
  },
  {
    name: "Premium",
    price: "49.99",
    period: "mes",
    features: [
      "Acceso ilimitado 24/7",
      "Todas las clases grupales incluidas",
      "Evaluación física mensual",
      "Programa de entrenamiento personalizado",
      "Acceso a vestuarios y sauna"
    ],
    cta: "Elegir Plan",
    popular: true
  },
  {
    name: "Familiar",
    price: "89.99",
    period: "mes",
    features: [
      "Acceso para 3 miembros de la familia",
      "Acceso ilimitado 24/7",
      "Todas las clases grupales incluidas",
      "Evaluación física trimestral",
      "Acceso a vestuarios y sauna"
    ],
    cta: "Elegir Plan",
    popular: false
  }
];
---

<section class="py-20 bg-light">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-heading font-bold mb-4">Nuestros Planes</h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Encuentra el plan perfecto para ti y comienza tu transformación hoy mismo.
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto">
      {plans.map(plan => (
        <div class={`bg-white rounded-lg shadow-lg overflow-hidden border ${plan.popular ? 'border-primary' : 'border-gray-200'} relative`}>
          {plan.popular && (
            <div class="absolute top-0 right-0 bg-primary text-white py-1 px-4 text-sm font-bold">
              Popular
            </div>
          )}
          <div class="p-6">
            <h3 class="text-2xl font-bold mb-2">{plan.name}</h3>
            <div class="mb-6">
              <span class="text-4xl font-bold">${plan.price}</span>
              <span class="text-gray-600">/{plan.period}</span>
            </div>
            <ul class="mb-8 space-y-3">
              {plan.features.map(feature => (
                <li class="flex items-start">
                  <svg class="w-5 h-5 text-primary mr-2 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span>{feature}</span>
                </li>
              ))}
            </ul>
            <a 
              href="/planes" 
              class={`block text-center py-3 px-6 rounded-lg font-bold transition-colors ${plan.popular ? 'bg-primary hover:bg-primary/90 text-white' : 'bg-gray-200 hover:bg-gray-300 text-gray-800'}`}
            >
              {plan.cta}
            </a>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>